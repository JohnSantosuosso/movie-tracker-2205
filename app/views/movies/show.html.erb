<h1>Movie Information</h1>

  <div id="movie-<%= @movie.id %>">
    <p><b>Title: </b><%= @movie.title %></p>
     <p><b>Creation Year: </b><%= @movie.creation_year %></p>
     <p><b>Genre: </b><%= @movie.genre %></p>
     <p><b>Actors By Age: </b><% @movie.youngest_to_oldest_actors.each do |performers| %></p>
     <p><%=performers.name %></p>
      <% end %>
      <p><b>Average Actor Age: </b><%=@movie.average_actor_age%></p>
  </div>

  <div id = "new_actor">
  <h2>Create New Actor</h2>
    <%= form_with url: "/movies/#{@movie.id}", method: :post, local: true do |f| %>
      <%= f.label :actor_name %>
      <%= f.text_field :actor_name %>
      <%= f.label :actor_age %>
      <%= f.text_field :actor_age %>
      <%= f.submit "Submit" %>
    <% end %>
  </div>